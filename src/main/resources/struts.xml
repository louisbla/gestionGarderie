<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false"/>
    <constant name="struts.devMode" value="true"/>
    

    <include file="example.xml"/>

    <package name="default"  namespace="/"  extends="struts-default">
        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
	</result-types>
        
        <action name="welcomeLink" class="garderie.action.LinkAction" method="welcome" >
            <result name="welcome" type="tiles">welcome</result>
	</action>
        <action name="afficherarticles" class="garderie.action.ArticleAction" >
            <result name="success" type="tiles">inventaire</result>
	</action>
        <action name="facturationLink" class="garderie.action.LinkAction" method="facturation" >
            <result name="facturation" type="tiles">facturation</result>
	</action>
        <action name="planningLink" class="garderie.action.LinkAction" method="planning" >
            <result name="planning" type="tiles">planning</result>
	</action>
        <action name="inscriptionLink" class="garderie.action.LinkAction" method="inscription" >
            <result name="inscription" type="tiles">inscription</result>
	</action>
        <action name="afficherCategories" class="garderie.action.AfficherCategorieAction">
            <result name="success" type="tiles">categorie</result>
	</action>
        
        <action name="editercategorie" class="garderie.action.UpdateCategorieAction">
            <result type="redirectAction">
                <param name="actionName">afficherCategories</param>
            </result>
	</action>
        
        <action name="deletecategorie" class="garderie.action.DeleteCategorieAction">
            <result type="redirectAction">
                <param name="actionName">afficherCategories</param>
            </result>
	</action>
        
        <action name="createcategorie" class="garderie.action.CreateCategorieAction">
            <result type="redirectAction">
                <param name="actionName">afficherCategories</param>
            </result>
	</action>
        
        <action name="updatearticle" class="garderie.action.UpdateArticleAction">
            <result type="redirectAction">
                <param name="actionName">inventaireLink</param>
            </result>
	</action>
        
        <action name="createarticle" class="garderie.action.CreateArticleAction">
            <result type="redirectAction">
                <param name="actionName">inventaireLink</param>
            </result>
	</action>
        
        <action name="deletearticle" class="garderie.action.DeleteArticleAction">
            <result type="redirectAction">
                <param name="actionName">inventaireLink</param>
            </result>
	</action>
        
        <action name="chercherarticle" class="garderie.action.ChercherArticleAction">
            <result name="success" type="tiles">inventaire</result>
	</action>
        
        <action name="loginform">  
            <result>login.jsp</result>  
        </action>  
        
        <action name="login" class="garderie.action.LoginAction" method="execute">
            <result name="input">/jsp/tiles/topbar.jsp</result>
            <result name="sucess" type="redirectionAction">index</result>
        </action >   
        
        
        <action name="logout" class="garderie.action.LoginAction" method="logout" >
            <result type="redirectAction">/jsp/welcomes.jsp</result>
        </action>
        
        
        <action name="profile" class="garderie.model.Profile" method="execute">   
            <result name="success" >profilesuccess.jsp</result>  
            <result name="error" >profileerror.jsp</result>  
        </action>  
        
    </package>

    <!-- Add addition packages and configuration here. -->
</struts>
